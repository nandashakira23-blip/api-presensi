# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASS=your_database_password
DB_NAME=presensi_fleur_atelier

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_secret_key_here

# API Configuration
API_BASE_URL=http://localhost:3000
CORS_ORIGIN=*

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/faces

# Security Configuration
BCRYPT_ROUNDS=10

# Face Recognition Configuration
FACE_SIMILARITY_THRESHOLD=0.65
FACE_MAX_FACES=10

# Location Configuration
DEFAULT_OFFICE_LAT=-6.200000
DEFAULT_OFFICE_LNG=106.816666
DEFAULT_OFFICE_RADIUS=100

# Development Settings
DEBUG=true
LOG_LEVEL=debug

# Google Maps API (untuk peta di admin panel)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here