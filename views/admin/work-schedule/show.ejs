<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'dark': {
                            50: '#f8f9fa',
                            100: '#e9ecef',
                            200: '#dee2e6',
                            300: '#ced4da',
                            400: '#adb5bd',
                            500: '#6c757d',
                            600: '#495057',
                            700: '#343a40',
                            800: '#212529',
                            900: '#1a1d20',
                        },
                        'brown': {
                            50: '#faf8f5',
                            100: '#f0ebe4',
                            200: '#e4d5c7',
                            300: '#d4bfa6',
                            400: '#c4a882',
                            500: '#b8956b',
                            600: '#a67c52',
                            700: '#8b6914',
                            800: '#6d4c0f',
                            900: '#4a320a',
                        }
                    }
                }
            }
        }
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }
        ::-webkit-scrollbar-track {
            background: #212529;
            border-radius: 4px;
        }
        ::-webkit-scrollbar-thumb {
            background: #a67c52;
            border-radius: 4px;
            border: 1px solid #343a40;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #b8956b;
        }
        .solid-background {
            background: #1a1d20;
        }
    </style>
</head>
<body class="bg-dark-900 min-h-screen solid-background">
    <%- include('../../partials/navbar') %>

    <div class="pt-16 sm:pt-20 lg:pt-20">
        <div class="lg:hidden pt-16 sm:pt-20"></div>
        
        <div class="flex flex-col lg:flex-row">
            <%- include('../../partials/sidebar', { currentPage: 'work-schedule' }) %>

            <div class="flex-1 lg:ml-64 p-4 sm:p-6 lg:p-8 min-h-screen">
                <!-- Header -->
                <div class="mb-6 sm:mb-8">
                    <div class="flex items-center mb-2">
                        <a href="/admin/work-schedule" class="text-brown-400 hover:text-brown-300 mr-4 transition-colors duration-200">
                            <i class="fas fa-arrow-left text-lg sm:text-xl"></i>
                        </a>
                        <div class="flex items-center space-x-3">
                            <div class="w-8 h-8 flex items-center justify-center">
                                <i class="fas fa-clock text-brown-400 text-xl"></i>
                            </div>
                            <h2 class="text-2xl sm:text-3xl font-bold text-white">Detail Jadwal Kerja</h2>
                        </div>
                    </div>
                    <p class="text-brown-300 text-sm sm:text-base ml-12">Kelola karyawan untuk jadwal "<%= schedule.nama %>"</p>
                </div>

                <!-- Flash Messages -->
                <% if (messages.success && messages.success.length > 0) { %>
                    <% messages.success.forEach(msg => { %>
                        <div class="bg-green-900/80 border border-green-600/50 text-green-200 px-4 py-3 rounded-lg mb-4 shadow-lg backdrop-blur-sm">
                            <i class="fas fa-check-circle mr-2"></i><%= msg %>
                        </div>
                    <% }) %>
                <% } %>

                <% if (messages.error && messages.error.length > 0) { %>
                    <% messages.error.forEach(msg => { %>
                        <div class="bg-red-900/80 border border-red-600/50 text-red-200 px-4 py-3 rounded-lg mb-4 shadow-lg backdrop-blur-sm">
                            <i class="fas fa-exclamation-circle mr-2"></i><%= msg %>
                        </div>
                    <% }) %>
                <% } %>

                <!-- Schedule Info Card -->
                <div class="bg-dark-800 rounded-xl shadow-2xl p-6 border border-brown-600/30 mb-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                        <div>
                            <p class="text-brown-400 text-sm mb-1">Nama Jadwal</p>
                            <p class="text-white font-semibold text-lg"><%= schedule.nama %></p>
                        </div>
                        <div>
                            <p class="text-brown-400 text-sm mb-1">Jam Kerja</p>
                            <p class="text-white font-semibold">
                                <i class="far fa-clock mr-2 text-brown-500"></i>
                                <%= schedule.jam_masuk.substring(0,5) %> - <%= schedule.jam_keluar.substring(0,5) %>
                            </p>
                        </div>
                        <div>
                            <p class="text-brown-400 text-sm mb-1">Hari Kerja</p>
                            <p class="text-white font-semibold">
                                <% 
                                let workDays = [];
                                try {
                                    workDays = typeof schedule.hari_kerja === 'string' ? JSON.parse(schedule.hari_kerja) : schedule.hari_kerja;
                                } catch(e) {
                                    workDays = [];
                                }
                                const dayMap = {
                                    'monday': 'Sen', 'tuesday': 'Sel', 'wednesday': 'Rab',
                                    'thursday': 'Kam', 'friday': 'Jum', 'saturday': 'Sab', 'sunday': 'Min'
                                };
                                const displayDays = workDays.map(day => dayMap[day.toLowerCase()] || day).join(', ');
                                %>
                                <i class="far fa-calendar mr-2 text-brown-500"></i>
                                <%= displayDays %>
                            </p>
                        </div>
                        <div>
                            <p class="text-brown-400 text-sm mb-1">Total Karyawan</p>
                            <p class="text-white font-semibold text-lg">
                                <i class="fas fa-users mr-2 text-brown-500"></i>
                                <%= assignedEmployees.length %> orang
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Assign Employee Form -->
                <div class="bg-dark-800 rounded-xl shadow-2xl p-6 border border-brown-600/30 mb-6">
                    <h3 class="text-xl font-bold text-white mb-4">
                        <i class="fas fa-user-plus mr-2 text-brown-400"></i>
                        Assign Karyawan ke Jadwal
                    </h3>
                    <form method="POST" action="/admin/work-schedule/<%= schedule.id %>/assign" class="flex flex-col sm:flex-row gap-4">
                        <div class="flex-1">
                            <select name="employee_id" required class="w-full px-4 py-3 bg-dark-700 border border-brown-600/50 rounded-lg focus:ring-2 focus:ring-brown-500 focus:border-brown-400 transition duration-200 text-white">
                                <option value="">-- Pilih Karyawan --</option>
                                <% availableEmployees.forEach(emp => { %>
                                    <option value="<%= emp.id %>"><%= emp.nik %> - <%= emp.nama %> (<%= emp.jabatan || 'Tidak ada jabatan' %>)</option>
                                <% }) %>
                            </select>
                        </div>
                        <button type="submit" class="px-6 py-3 bg-brown-600 hover:bg-brown-500 text-white rounded-lg transition duration-200 shadow-lg">
                            <i class="fas fa-plus mr-2"></i>Assign
                        </button>
                    </form>
                </div>

                <!-- Assigned Employees List -->
                <div class="bg-dark-800 rounded-xl shadow-2xl overflow-hidden border border-brown-600/30">
                    <div class="px-6 py-4 bg-brown-800 border-b border-brown-600/30">
                        <h3 class="text-xl font-bold text-white">
                            <i class="fas fa-users mr-2 text-brown-400"></i>
                            Karyawan yang Sudah Di-assign
                        </h3>
                    </div>

                    <% if (assignedEmployees && assignedEmployees.length > 0) { %>
                        <!-- Mobile Card View -->
                        <div class="block lg:hidden">
                            <% assignedEmployees.forEach(emp => { %>
                                <div class="border-b border-brown-600/30 p-4">
                                    <div class="flex items-start justify-between mb-2">
                                        <div>
                                            <h4 class="font-semibold text-white text-lg"><%= emp.nama %></h4>
                                            <p class="text-brown-300 text-sm">NIK: <%= emp.nik %></p>
                                            <p class="text-brown-300 text-sm"><%= emp.jabatan || 'Tidak ada jabatan' %></p>
                                        </div>
                                        <form method="POST" action="/admin/work-schedule/<%= schedule.id %>/unassign" style="display:inline;" onsubmit="return confirm('Yakin ingin unassign <%= emp.nama %> dari jadwal ini?')">
                                            <input type="hidden" name="employee_id" value="<%= emp.id %>">
                                            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded-lg text-sm transition duration-200">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            <% }) %>
                        </div>

                        <!-- Desktop Table View -->
                        <div class="hidden lg:block overflow-x-auto">
                            <table class="min-w-full divide-y divide-brown-600/30">
                                <thead class="bg-dark-700">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-brown-200 uppercase tracking-wider">NIK</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-brown-200 uppercase tracking-wider">Nama</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-brown-200 uppercase tracking-wider">Jabatan</th>
                                        <th class="px-6 py-3 text-center text-xs font-medium text-brown-200 uppercase tracking-wider">Aksi</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-brown-600/30">
                                    <% assignedEmployees.forEach(emp => { %>
                                        <tr class="hover:bg-dark-600/50 transition duration-200">
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-brown-200">
                                                <%= emp.nik %>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">
                                                <%= emp.nama %>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-brown-200">
                                                <%= emp.jabatan || 'Tidak ada jabatan' %>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                                                <form method="POST" action="/admin/work-schedule/<%= schedule.id %>/unassign" style="display:inline;" onsubmit="return confirm('Yakin ingin unassign <%= emp.nama %> dari jadwal ini?')">
                                                    <input type="hidden" name="employee_id" value="<%= emp.id %>">
                                                    <button type="submit" class="text-red-400 hover:text-red-300 transition duration-200">
                                                        <i class="fas fa-user-times mr-1"></i>Unassign
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="p-8 text-center text-brown-300">
                            <i class="fas fa-users-slash text-4xl mb-4 text-brown-400"></i>
                            <p>Belum ada karyawan yang di-assign ke jadwal ini</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Real-time Clock
        function updateClock() {
            try {
                const now = new Date();
                const options = {
                    day: '2-digit',
                    month: '2-digit', 
                    year: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit',
                    timeZone: 'Asia/Jakarta'
                };
                
                const timeString = now.toLocaleString('id-ID', options);
                const clockElement = document.getElementById('currentTime');
                
                if (clockElement) {
                    clockElement.textContent = timeString;
                }
            } catch (error) {
                console.error('Clock update error:', error);
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const clockElement = document.getElementById('currentTime');
            
            if (clockElement) {
                updateClock();
                setInterval(updateClock, 1000);
            }
        });
    </script>
</body>
</html>
