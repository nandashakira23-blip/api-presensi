    <script>
        // Real-time Clock - Consistent format (date and time only)
        function updateClock() {
            try {
                const now = new Date();
                const options = {
                    day: '2-digit',
                    month: '2-digit', 
                    year: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit',
                    timeZone: 'Asia/Makassar' // WITA timezone
                };
                
                const timeString = now.toLocaleString('id-ID', options);
                const clockElement = document.getElementById('currentTime');
                
                if (clockElement) {
                    clockElement.textContent = timeString;
                }
            } catch (error) {
                console.error('Clock update error:', error);
                // Fallback to simple time format
                const clockElement = document.getElementById('currentTime');
                
                if (clockElement) {
                    const now = new Date();
                    const day = String(now.getDate()).padStart(2, '0');
                    const month = String(now.getMonth() + 1).padStart(2, '0');
                    const year = now.getFullYear();
                    const hours = String(now.getHours()).padStart(2, '0');
                    const minutes = String(now.getMinutes()).padStart(2, '0');
                    const seconds = String(now.getSeconds()).padStart(2, '0');
                    clockElement.textContent = `${day}/${month}/${year} ${hours}:${minutes}:${seconds}`;
                }
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded, initializing clock...');
            const clockElement = document.getElementById('currentTime');
            
            if (clockElement) {
                console.log('Clock element found, starting updates...');
                updateClock();
                setInterval(updateClock, 1000);
            } else {
                console.log('Clock element not found on page load');
                // Try again after a short delay
                setTimeout(function() {
                    const clockElement = document.getElementById('currentTime');
                    
                    if (clockElement) {
                        console.log('Clock element found after delay, starting updates...');
                        updateClock();
                        setInterval(updateClock, 1000);
                    }
                }, 500);
            }

            // Initialize attendance chart
            initAttendanceChart();
        });

        // Initialize attendance chart
        function initAttendanceChart() {
            const ctx = document.getElementById('attendanceChart');
            if (!ctx) {
                console.error('Chart canvas not found');
                return;
            }

            // Fetch attendance data for the last 7 days
            fetch('/admin/api/attendance-chart-data')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        createChart(ctx, data.chartData);
                    } else {
                        console.error('Failed to load chart data:', data.message);
                        // Create chart with dummy data if API fails
                        createChart(ctx, getDummyChartData());
                    }
                })
                .catch(error => {
                    console.error('Error loading chart data:', error);
                    // Create chart with dummy data if API fails
                    createChart(ctx, getDummyChartData());
                });
        }

        // Create the chart
        function createChart(ctx, chartData) {
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: chartData.labels,
                    datasets: [{
                        label: 'Jumlah Absensi',
                        data: chartData.data,
                        borderColor: '#a67c52',
                        backgroundColor: 'rgba(166, 124, 82, 0.1)',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4,
                        pointBackgroundColor: '#a67c52',
                        pointBorderColor: '#ffffff',
                        pointBorderWidth: 2,
                        pointRadius: 6,
                        pointHoverRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            labels: {
                                color: '#d4bfa6',
                                font: {
                                    size: 14
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                color: '#d4bfa6',
                                stepSize: 1
                            },
                            grid: {
                                color: 'rgba(166, 124, 82, 0.2)'
                            }
                        },
                        x: {
                            ticks: {
                                color: '#d4bfa6'
                            },
                            grid: {
                                color: 'rgba(166, 124, 82, 0.2)'
                            }
                        }
                    }
                }
            });
        }

        // Dummy data for fallback
        function getDummyChartData() {
            const today = new Date();
            const labels = [];
            const data = [];
            
            for (let i = 6; i >= 0; i--) {
                const date = new Date(today);
                date.setDate(date.getDate() - i);
                labels.push(date.toLocaleDateString('id-ID', { weekday: 'short', day: 'numeric', month: 'short' }));
                data.push(Math.floor(Math.random() * 10) + 5); // Random data between 5-15
            }
            
            return { labels, data };
        }
    </script>
