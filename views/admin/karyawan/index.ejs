    <script>
        // Real-time Clock - Consistent format (date and time only)
        function updateClock() {
            try {
                const now = new Date();
                const options = {
                    day: '2-digit',
                    month: '2-digit', 
                    year: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit',
                    timeZone: 'Asia/Jakarta'
                };
                
                const timeString = now.toLocaleString('id-ID', options);
                const clockElement = document.getElementById('currentTime');
                
                if (clockElement) {
                    clockElement.textContent = timeString;
                }
            } catch (error) {
                console.error('Clock update error:', error);
                // Fallback to simple time format
                const clockElement = document.getElementById('currentTime');
                
                if (clockElement) {
                    const now = new Date();
                    const day = String(now.getDate()).padStart(2, '0');
                    const month = String(now.getMonth() + 1).padStart(2, '0');
                    const year = now.getFullYear();
                    const hours = String(now.getHours()).padStart(2, '0');
                    const minutes = String(now.getMinutes()).padStart(2, '0');
                    const seconds = String(now.getSeconds()).padStart(2, '0');
                    clockElement.textContent = `${day}/${month}/${year} ${hours}:${minutes}:${seconds}`;
                }
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded, initializing clock...');
            const clockElement = document.getElementById('currentTime');
            
            if (clockElement) {
                console.log('Clock element found, starting updates...');
                updateClock();
                setInterval(updateClock, 1000);
            } else {
                console.log('Clock element not found on page load');
                // Try again after a short delay
                setTimeout(function() {
                    const clockElement = document.getElementById('currentTime');
                    
                    if (clockElement) {
                        console.log('Clock element found after delay, starting updates...');
                        updateClock();
                        setInterval(updateClock, 1000);
                    }
                }, 500);
            }
        });

        // Image modal functions
        function showImage(src) {
            document.getElementById('modalImage').src = src;
            document.getElementById('imageModal').classList.remove('hidden');
            document.getElementById('imageModal').classList.add('flex');
        }

        function closeImageModal() {
            document.getElementById('imageModal').classList.add('hidden');
            document.getElementById('imageModal').classList.remove('flex');
        }

        // Close image modal when clicking outside
        document.getElementById('imageModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeImageModal();
            }
        });

        // Edit Karyawan Modal Functions
        const editModal = document.getElementById('editKaryawanModal');
        const editForm = document.getElementById('editKaryawanForm');
        const closeEditModal = document.getElementById('closeEditModal');
        const cancelEditBtn = document.getElementById('cancelEditBtn');

        // Cache for jabatan options
        let jabatanOptionsCache = null;
        // Cache for schedule options
        let scheduleOptionsCache = null;

        // Load jabatan options for edit modal
        async function loadJabatanOptions(forceReload = false) {
            console.log('loadJabatanOptions called, forceReload:', forceReload);
            
            // Use cache if available and not forcing reload
            if (jabatanOptionsCache && !forceReload) {
                console.log('Using cached jabatan options');
                populateJabatanSelect(jabatanOptionsCache);
                return true;
            }

            try {
                console.log('Fetching jabatan from API...');
                const response = await fetch('/admin/jabatan/list', {
                    method: 'GET',
                    credentials: 'same-origin',
                    headers: {
                        'Accept': 'application/json',
                        'Content-Type': 'application/json'
                    }
                });
                
                console.log('Response status:', response.status);
                console.log('Response headers:', response.headers);
                
                if (!response.ok) {
                    const errorText = await response.text();
                    console.error('HTTP error response:', errorText);
                    throw new Error(`HTTP error! status: ${response.status} - ${errorText}`);
                }
                
                const result = await response.json();
                console.log('Jabatan API response:', result);
                
                if (result.success) {
                    jabatanOptionsCache = result.data;
                    populateJabatanSelect(result.data);
                    console.log('Jabatan options loaded successfully');
                    return true;
                } else {
                    console.error('Failed to load jabatan:', result.message);
                    alert('Gagal memuat data jabatan: ' + result.message);
                    return false;
                }
            } catch (error) {
                console.error('Failed to load jabatan options:', error);
                alert('Gagal memuat data jabatan: ' + error.message);
                return false;
            }
        }

        // Populate jabatan select element
        function populateJabatanSelect(jabatanData) {
            console.log('populateJabatanSelect called with:', jabatanData);
            
            const select = document.getElementById('editJabatan');
            if (!select) {
                console.error('editJabatan select element not found!');
                return;
            }
            
            select.innerHTML = '<option value="">Pilih Jabatan</option>';
            
            if (jabatanData && Array.isArray(jabatanData)) {
                jabatanData.forEach(jabatan => {
                    const option = document.createElement('option');
                    option.value = jabatan.id;
                    option.textContent = jabatan.nama_jabatan;
                    select.appendChild(option);
                });
                console.log('Jabatan select populated with', jabatanData.length, 'options');
            } else {
                console.error('Invalid jabatan data:', jabatanData);
            }
        }

        // Load schedule options for edit modal
        async function loadScheduleOptions(forceReload = false) {
            console.log('loadScheduleOptions called, forceReload:', forceReload);
            
            // Use cache if available and not forcing reload
            if (scheduleOptionsCache && !forceReload) {
                console.log('Using cached schedule options');
                populateScheduleSelect(scheduleOptionsCache);
                return true;
            }

            try {
                console.log('Fetching schedules from API...');
                const response = await fetch('/admin/schedules/list', {
                    method: 'GET',
                    credentials: 'same-origin',
                    headers: {
                        'Accept': 'application/json',
                        'Content-Type': 'application/json'
                    }
                });
                
                console.log('Response status:', response.status);
                
                if (!response.ok) {
                    const errorText = await response.text();
                    console.error('HTTP error response:', errorText);
                    throw new Error(`HTTP error! status: ${response.status} - ${errorText}`);
                }
                
                const result = await response.json();
                console.log('Schedule API response:', result);
                
                if (result.success) {
                    scheduleOptionsCache = result.data;
                    populateScheduleSelect(result.data);
                    console.log('Schedule options loaded successfully');
                    return true;
                } else {
                    console.error('Failed to load schedules:', result.message);
                    // Don't alert, just log - schedule is optional
                    return false;
                }
            } catch (error) {
                console.error('Failed to load schedule options:', error);
                // Don't alert, just log - schedule is optional
                return false;
            }
        }

        // Populate schedule select element
        function populateScheduleSelect(scheduleData) {
            console.log('populateScheduleSelect called with:', scheduleData);
            
            const select = document.getElementById('editSchedule');
            if (!select) {
                console.error('editSchedule select element not found!');
                return;
            }
            
            select.innerHTML = '<option value="">Pilih Jadwal Kerja</option>';
            
            if (scheduleData && Array.isArray(scheduleData)) {
                scheduleData.forEach(schedule => {
                    const option = document.createElement('option');
                    option.value = schedule.id;
                    const jamMasuk = schedule.jam_masuk ? schedule.jam_masuk.substring(0, 5) : '';
                    const jamKeluar = schedule.jam_keluar ? schedule.jam_keluar.substring(0, 5) : '';
                    option.textContent = `${schedule.nama} (${jamMasuk} - ${jamKeluar})`;
                    select.appendChild(option);
                });
                console.log('Schedule select populated with', scheduleData.length, 'options');
            } else {
                console.error('Invalid schedule data:', scheduleData);
            }
        }

        // Edit karyawan function
        async function editKaryawan(id, nik, nama, idJabatan, idSchedule) {
            console.log('editKaryawan called with:', { id, nik, nama, idJabatan, idSchedule });
            
            try {
                // Ensure jabatan options are loaded
                console.log('Loading jabatan options...');
                const loaded = await loadJabatanOptions();
                if (!loaded) {
                    alert('Gagal memuat data jabatan. Silakan coba lagi.');
                    return;
                }
                
                // Load schedule options (optional, don't fail if it doesn't load)
                console.log('Loading schedule options...');
                await loadScheduleOptions();
                
                console.log('Setting form values...');
                // Set form values
                document.getElementById('editKaryawanId').value = id;
                document.getElementById('editNik').value = nik;
                document.getElementById('editNama').value = nama;
                
                // Set jabatan dropdown to current value
                const jabatanSelect = document.getElementById('editJabatan');
                const jabatanId = idJabatan && idJabatan !== 'null' && idJabatan !== '' ? String(idJabatan) : '';
                
                // Set schedule dropdown to current value
                const scheduleSelect = document.getElementById('editSchedule');
                const scheduleId = idSchedule && idSchedule !== 'null' && idSchedule !== '' ? String(idSchedule) : '';
                
                console.log('Setting jabatan dropdown to:', jabatanId);
                console.log('Setting schedule dropdown to:', scheduleId);
                
                // Wait for DOM to be ready, then set value
                setTimeout(() => {
                    jabatanSelect.value = jabatanId;
                    
                    // If value didn't set, try alternative method
                    if (jabatanSelect.value !== jabatanId && jabatanId) {
                        const targetOption = Array.from(jabatanSelect.options).find(opt => opt.value === jabatanId);
                        if (targetOption) {
                            targetOption.selected = true;
                        }
                    }
                    
                    // Set schedule value
                    scheduleSelect.value = scheduleId;
                    if (scheduleSelect.value !== scheduleId && scheduleId) {
                        const targetOption = Array.from(scheduleSelect.options).find(opt => opt.value === scheduleId);
                        if (targetOption) {
                            targetOption.selected = true;
                        }
                    }
                    
                    console.log('Jabatan dropdown set to:', jabatanSelect.value);
                    console.log('Schedule dropdown set to:', scheduleSelect.value);
                }, 100);
                
                console.log('Showing modal...');
                // Show modal
                const editModal = document.getElementById('editKaryawanModal');
                if (editModal) {
                    editModal.classList.remove('hidden');
                    editModal.classList.add('flex');
                    console.log('Modal shown successfully');
                } else {
                    console.error('Modal element not found!');
                    alert('Error: Modal tidak ditemukan');
                }
            } catch (error) {
                console.error('Error in editKaryawan:', error);
                alert('Terjadi kesalahan saat membuka form edit: ' + error.message);
            }
        }

        // Event listeners for edit buttons
        document.addEventListener('click', function(e) {
            // Desktop edit button
            if (e.target.closest('.edit-karyawan-btn')) {
                e.preventDefault();
                const btn = e.target.closest('.edit-karyawan-btn');
                const id = btn.dataset.id;
                const nik = btn.dataset.nik;
                const nama = btn.dataset.nama;
                const jabatan = btn.dataset.jabatan;
                const schedule = btn.dataset.schedule;
                
                console.log('Edit button clicked:', { id, nik, nama, jabatan, schedule });
                editKaryawan(id, nik, nama, jabatan, schedule);
            }
            
            // Mobile edit button
            if (e.target.closest('.edit-karyawan-btn-mobile')) {
                e.preventDefault();
                const btn = e.target.closest('.edit-karyawan-btn-mobile');
                const id = btn.dataset.id;
                const nik = btn.dataset.nik;
                const nama = btn.dataset.nama;
                const jabatan = btn.dataset.jabatan;
                const schedule = btn.dataset.schedule;
                
                console.log('Mobile edit button clicked:', { id, nik, nama, jabatan, schedule });
                editKaryawan(id, nik, nama, jabatan, schedule);
            }

            // Desktop reset button
            if (e.target.closest('.reset-karyawan-btn')) {
                e.preventDefault();
                const btn = e.target.closest('.reset-karyawan-btn');
                const id = btn.dataset.id;
                const nama = btn.dataset.nama;
                
                console.log('Reset button clicked:', { id, nama });
                resetKaryawan(id, nama);
            }
            
            // Mobile reset button
            if (e.target.closest('.reset-karyawan-btn-mobile')) {
                e.preventDefault();
                const btn = e.target.closest('.reset-karyawan-btn-mobile');
                const id = btn.dataset.id;
                const nama = btn.dataset.nama;
                
                console.log('Mobile reset button clicked:', { id, nama });
                resetKaryawan(id, nama);
            }
        });

        // Reset karyawan function
        async function resetKaryawan(id, nama) {
            console.log('resetKaryawan called with:', { id, nama });
            
            // Test route first
            try {
                console.log('Testing route connectivity...');
                const testResponse = await fetch('/admin/karyawan/test-reset', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ test: true })
                });
                console.log('Test route status:', testResponse.status);
                if (testResponse.ok) {
                    const testResult = await testResponse.json();
                    console.log('Test route result:', testResult);
                } else {
                    console.error('Test route failed:', testResponse.status);
                }
            } catch (testError) {
                console.error('Test route error:', testError);
            }
            
            const confirmMessage = `Reset karyawan "${nama}"?\n\nIni akan:\n• Menghapus referensi face recognition\n• Mengaktivasi ulang akun karyawan\n• Data absensi tetap tersimpan\n\nKaryawan perlu melakukan aktivasi ulang di aplikasi Android.`;
            
            if (!confirm(confirmMessage)) {
                return;
            }

            try {
                console.log('Sending reset request to /admin/karyawan/reset...');
                console.log('Request body:', { id: id });
                
                const response = await fetch('/admin/karyawan/reset', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id: id })
                });

                console.log('Response status:', response.status);
                console.log('Response headers:', response.headers);
                
                if (!response.ok) {
                    console.error('HTTP error! status:', response.status);
                    const errorText = await response.text();
                    console.error('Error response:', errorText);
                    throw new Error(`HTTP error! status: ${response.status} - ${errorText}`);
                }

                const result = await response.json();
                console.log('Reset result:', result);

                if (result.success) {
                    alert('Karyawan berhasil direset!\n\nKaryawan dapat melakukan aktivasi ulang di aplikasi Android dengan NIK yang sama.');
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Reset error:', error);
                alert('Terjadi kesalahan: ' + error.message);
            }
        }

        // Close edit modal functions
        function closeEditKaryawanModal() {
            editModal.classList.add('hidden');
            editModal.classList.remove('flex');
        }

        if (closeEditModal) {
            closeEditModal.addEventListener('click', closeEditKaryawanModal);
        }
        
        if (cancelEditBtn) {
            cancelEditBtn.addEventListener('click', closeEditKaryawanModal);
        }

        // Close modal when clicking outside
        if (editModal) {
            editModal.addEventListener('click', function(e) {
                if (e.target === editModal) {
                    closeEditKaryawanModal();
                }
            });
        }

        // Handle edit form submission
        if (editForm) {
            editForm.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                console.log('Form submission started...');
                
                const formData = {
                    id: document.getElementById('editKaryawanId').value,
                    nik: document.getElementById('editNik').value.trim(),
                    nama: document.getElementById('editNama').value.trim(),
                    id_jabatan: document.getElementById('editJabatan').value,
                    work_schedule_id: document.getElementById('editSchedule').value || null
                };

                console.log('Form data:', formData);

                if (!formData.nik || !formData.nama || !formData.id_jabatan) {
                    alert('NIK, Nama, dan Jabatan harus diisi!');
                    return;
                }

                try {
                    console.log('Sending update request...');
                    const response = await fetch('/admin/karyawan/update', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(formData)
                    });

                    console.log('Response status:', response.status);
                    
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }

                    const result = await response.json();
                    console.log('Update result:', result);

                    if (result.success) {
                        alert('Karyawan berhasil diupdate!');
                        closeEditKaryawanModal();
                        location.reload();
                    } else {
                        alert('Error: ' + result.message);
                    }
                } catch (error) {
                    console.error('Update error:', error);
                    alert('Terjadi kesalahan: ' + error.message);
                }
            });
        } else {
            console.error('Edit form not found!');
        }

        // Pre-load jabatan and schedule options on page load
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded, pre-loading options...');
            loadJabatanOptions().then(() => {
                console.log('Jabatan options pre-loaded successfully');
            }).catch(error => {
                console.error('Failed to pre-load jabatan options:', error);
            });
            
            loadScheduleOptions().then(() => {
                console.log('Schedule options pre-loaded successfully');
            }).catch(error => {
                console.error('Failed to pre-load schedule options:', error);
            });
        });
    </script>
